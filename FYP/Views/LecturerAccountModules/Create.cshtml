@model FYP.Models.AccountModule

@{
    ViewData["Title"] = "Create Account Module";
    Layout = "~/Views/Shared/_Layout-User.cshtml";
}

<h1>Create</h1>

<h4>AccountModule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
